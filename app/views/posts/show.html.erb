<div class="post-container">
  <div class="post">
    <div class="post-header">
      <div class="post_info-container">
        <div class="author-container">
          <div class="author-avatar">
            <%= avatar_nil?(@post.user.avatar, { color: @post.user.preferences }) %>
          </div>
          <div class="author-info">
            <h3><%= @post.user.username %></h3>
            <p><%= @post.created_at %></p>
          </div>
        </div>
      </div>
      <h2>
        <%= @post.title %>
        <% if @post.checked %>
          <i class="uil uil-check"></i>
        <% end %>
      </h2>
    </div>
    <div class="post-thumbnail">
      <%= image_tag("thumbnails/#{@post.thumbnail}") %>
    </div>
    <div class="post-body">
      <p><%= @post.body %></p>
    </div>
    <div class="post-footer">
      <% @post.posts_category.each do |post_category|%>
          <%= link_to category_posts_path(post_category.category.id), class: 'btn' do %>
              <%= post_category.category.title %>
          <% end %>
      <% end %>
    </div>
  </div>
</div>